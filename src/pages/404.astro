---
import PageLayout from "@/layouts/PageLayout.astro";
import { buttonVariants } from "@/components/ui/button";
import { notFoundPageContent } from "@/config";

const { seo, page } = notFoundPageContent;
---

<PageLayout
  seo={seo}
  page={page}
>
  <div class="mt-32 flex flex-col items-center justify-center px-8">
    <p class="mb-4 leading-7 [&:not(:first-child)]:mt-6">
      Sorry, we couldn't find the page you're looking for.
    </p>
    <a href="/" rel="noreferrer" class={buttonVariants()}> Go back home</a>
  </div>
</PageLayout>
