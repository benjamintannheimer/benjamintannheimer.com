---
import PageLayout from "@/layouts/PageLayout.astro";
import { homePageContent } from "@/config";
import { buttonVariants } from "@/components/ui/button";
import Connect from "@/components/content/Connect.astro";
import ProfileCard from "@/components/content/ProfileCard.astro";
import BentoBox from '@/components/layout/BentoBox.astro';
import Technologies from "@/components/content/Technologies.astro";
import Certificates from "@/components/content/Certificates.astro";


const { seo, page } = homePageContent;
---

<PageLayout
  seo={seo}
  page={page}
>
  <ProfileCard />

  <!-- Bento Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mt-8">
    <BentoBox>
      <h2 class="text-2xl font-bold mb-4">About Me</h2>
      <p class="text-gray-600 dark:text-gray-300">
        I'm Benjamin Tannheimer, a passionate web developer with expertise in modern technologies. I love creating efficient, scalable, and user-friendly web applications.
      </p>
      <a href="/about" class={buttonVariants({ variant: 'link' }) + " mt-4"}>Learn More</a>
    </BentoBox>

    <BentoBox>
      <h2 class="text-2xl font-bold mb-4">My Projects</h2>
      <p class="text-gray-600 dark:text-gray-300">
        Explore my portfolio of web applications, open-source contributions, and experiments with cutting-edge technologies.
      </p>
      <a href="/projects" class={buttonVariants({ variant: 'link' }) + " mt-4"}>View Projects</a>
    </BentoBox>

    <BentoBox>
      <h2 class="text-2xl font-bold mb-4">Blog & Insights</h2>
      <p class="text-gray-600 dark:text-gray-300">
        Read my latest thoughts on web development trends, coding best practices, and tech industry insights.
      </p>
      <a href="/blog" class={buttonVariants({ variant: 'link' }) + " mt-4"}>Read Blog</a>
    </BentoBox>
  </div>
  <Technologies />
  <Certificates />
  <Connect />
</PageLayout>
