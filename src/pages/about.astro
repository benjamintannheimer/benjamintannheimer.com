---
import PageLayout from "@/layouts/PageLayout.astro";
import { buttonVariants } from "@/components/ui/button";
import { position, aboutPageContent } from "@/config";
import BentoBox from "@/components/layout/BentoBox.astro";
import Connect from "@/components/content/Connect.astro";

const { seo, page } = aboutPageContent;
---

<PageLayout seo={seo} page={page}>
  <!-- About Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    
    <BentoBox>
      <h2 class="text-2xl font-bold mb-4">My Background</h2>
      <p class="text-gray-600 dark:text-gray-300">
        With a background in full-stack development, I specialize in building scalable web applications using 
        technologies like Astro, React, TypeScript, and Node.js. I enjoy solving complex problems, optimizing 
        performance, and contributing to open-source communities.
      </p>
    </BentoBox>

    <BentoBox>
      <h2 class="text-2xl font-bold mb-4">What You'll Find Here</h2>
      <ul class="list-disc pl-6 text-gray-600 dark:text-gray-300">
        <li>Deep dives into JavaScript, TypeScript, and modern frameworks</li>
        <li>Coding best practices and performance optimizations</li>
        <li>Tooling & automation tips to streamline development workflows</li>
        <li>My learnings from projects, experiments, and mistakes</li>
      </ul>
    </BentoBox>

  </div>

  <Connect />

</PageLayout>
