---
import Header from "@/components/page/Header.astro";
import type { BaseLink } from "@/types/config";
import { ArrowLeft } from "lucide-react";

interface Props {
  title: string;
  subtitle?: string;
  backlink?: BaseLink;
}

const { title, subtitle, backlink } = Astro.props;
---
<div>
    {backlink && (
        <a href={backlink.url} class="inline-flex items-center mb-6 text-sm font-medium text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-200 transition-colors duration-200">
            <ArrowLeft className="w-4 h-4 mr-2" />
            {backlink.title}
        </a>
    )}
    <Header title={title} subtitle={subtitle}></Header>
</div>