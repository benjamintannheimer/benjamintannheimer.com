---
interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---
<div class="text-center mb-6 mt-12">
    <h1 class="text-4xl md:text-5xl font-bold mb-4">
      {title}
    </h1>
    {subtitle && (
        <p class="text-xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
            {subtitle}
        </p>
    )}
</div>