---
import { buttonVariants } from "@/components/ui/button";
import BentoBox from "@/components/layout/BentoBox.astro";
---

<BentoBox className="text-center max-w-6xl mx-auto mt-12 p-8">
    <h2 class="text-2xl font-bold mb-4">Let's Connect</h2>
    <p class="text-xl text-gray-600 dark:text-gray-400 mb-6">
      Interested in collaborating or just want to say hi? I'm always open to new opportunities and connections.
    </p>
    <a 
      href="/contact"
      class={buttonVariants({ variant: 'default' })}
    >
      Get in Touch
    </a>
</BentoBox>
