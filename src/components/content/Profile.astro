---
import { identity, position } from '@/config';
import BentoBox from '@/components/layout/BentoBox.astro';
import { Link } from '../Link';
---
<section class="mt-8">
  <BentoBox className="p-6">
    <div class="flex flex-col sm:flex-row items-center sm:space-x-6">
      {/* Avatar */}
      <div class="flex-shrink-0">
        <img 
          src={identity.avatar} 
          alt={`Avatar of ${identity.name}`} 
          class="w-32 h-32 rounded-full border shadow-sm" 
        />
      </div>
      {/* Details */}
      <div class="mt-4 sm:mt-0 text-center sm:text-left">
        <h2 class="text-2xl font-bold text-foreground">{identity.name}</h2>
        <p class="mt-2 text-sm text-muted-foreground">
          Currently working at <span class="text-primary">{position.companyName}</span> as <span class="text-primary">{position.jobTitle}</span>
        </p>
        <p class="mt-1 text-sm text-muted-foreground">
          Based in <span class="text-primary">{position.companyLocation}</span>
        </p>
        <div class="mt-4">
          <Link href="/resume.pdf" class="text-sm text-muted-foreground underline">
            View my resume
          </Link>
        </div>
      </div>
    </div>
  </BentoBox>
</section>
