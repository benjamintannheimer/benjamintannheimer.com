---
import BentoBox from "@/components/layout/BentoBox.astro";
import Header from '@/components/page/Header.astro';
import { friends } from "@/config";

// TODO: if the description text is rather short the interior may be placed more higher up
---
<Header title="Friends" subtitle="Some cool people I met on my journey." />

<section id="friends">
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    {friends.map((friend) => (
      <BentoBox hoverHighlight={true} href={friend.url} target="_blank" rel="noopener noreferrer">
        <div 
          class="flex items-center space-x-4"
        >
          <img 
            src={friend.image} 
            alt={friend.title} 
            class="h-12 w-12 rounded-full object-cover transition-transform duration-300 hover:scale-110"
          />
          <div class="flex flex-col">
            <h3 class="text-lg font-medium transition-colors">
              {friend.title}
            </h3>
            <p class="line-clamp-2 text-sm text-neutral-600 dark:text-neutral-400">
              {friend.description}
            </p>
          </div>
        </div>
      </BentoBox>
    ))}
  </div>  
</section>