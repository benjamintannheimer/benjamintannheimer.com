---
import Header from '@/components/page/Header.astro';
import BentoBox from '@/components/layout/BentoBox.astro';
import { experiences } from '@/config';

---

<Header title="Experience" subtitle="Where I have worked." />

<section id="experience">
    {experiences.map(exp => (
        <BentoBox className="mb-6" padding={true}>
            <div class="mb-6 last:mb-0">
                <div class="flex items-center space-x-4">
                    <a href={exp.url} target="_blank" rel="noopener noreferrer">
                        <img src={exp.logo} alt={`${exp.company} Logo`} class="w-10 h-10 rounded-lg" />
                    </a>
                    <div>
                        <h3 class="text-xl font-semibold">{exp.title} @{exp.company}</h3>
                        <p class="text-sm text-muted-foreground">{exp.date}</p>
                    </div>
                </div>
                <p class="mt-2">{exp.description}</p>
                <div class="mt-2">
                    {exp.technologies.map((tech) => (
                        <span class="bg-background text-foreground text-xs font-medium me-2 px-2.5 py-0.5 rounded-sm border">
                            {tech.name}
                        </span>
                        )
                    )}
                </div>
            </div>
        </BentoBox>
    ))}
</section>
