---
interface Friend {
  name: string;
  description: string;
  link: string;
  avatar: string;
}


const friends = [
  {
    name: "Astro",
    description: "The web framework for content-driven websites",
    link: "https://astro.build",
    avatar: "/links/astro.svg"
  },
  {
    name: "ShadCN",
    description: "Beautifully designed components built using Radix UI and Tailwind CSS",
    link: "https://shadcn.com",
    avatar: "/links/shadcn.svg"
  }
];

// const { friends } = Astro.props;
---

<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
  {friends.map((friend) => (
    <a 
      href={friend.link} 
      target="_blank" 
      rel="noopener noreferrer"
      class="flex items-center space-x-4 p-4 rounded-lg border border-neutral-200 dark:border-neutral-700 bg-white dark:bg-neutral-900 shadow-md transition-transform duration-300 hover:scale-105"
    >
      <img 
        src={friend.avatar} 
        alt={friend.name} 
        class="h-12 w-12 rounded-full object-cover transition-transform duration-300 hover:scale-110"
      />
      <div class="flex flex-col">
        <span class="text-lg font-medium transition-colors">
          {friend.name}
        </span>
        <span class="line-clamp-2 text-sm text-neutral-600 dark:text-neutral-400">
          {friend.description}
        </span>
      </div>
    </a>
  ))}
</div>
