---
import { Github, Twitter, Linkedin } from 'lucide-react';

const profile = {
  name: "Benjamin Tannheimer",
  bio: "Developer | Quant Finance Enthusiast | Homelab Builder",
  avatar: "/pfp.jpg", // Replace with your actual profile picture path
  social: {
    github: "https://github.com/yourusername",
    twitter: "https://twitter.com/yourhandle",
    linkedin: "https://linkedin.com/in/yourprofile",
  },
  stats: [
    { label: "Posts", value: 4 },
    { label: "Projects", value: 3 },
    { label: "Bounties", value: 0 },
  ],
};
---

<div class="flex flex-col items-center shadow-xl rounded-3xl p-8 mx-auto text-center border">
  <!-- Profile Image -->
  <img src={profile.avatar} alt={profile.name} class="w-32 h-32 rounded-full border-4 shadow-md" />

  <!-- Name -->
  <h2 class="mt-6 text-2xl font-bold text-white">{profile.name}</h2>

  <!-- Bio -->
  <p class="mt-3 text-sm text-gray-400">{profile.bio}</p>

  <!-- Stats -->
  <div class="flex justify-center mt-6 space-x-8">
    {profile.stats.map((stat) => (
      <div class="flex flex-col items-center">
        <span class="text-2xl font-bold text-white">{stat.value}</span>
        <span class="text-sm text-gray-400">{stat.label}</span>
      </div>
    ))}
  </div>
</div>
