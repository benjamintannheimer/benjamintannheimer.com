---
import BentoBox from "@/components/layout/BentoBox.astro";
import { technologies } from "@/config";
import Header from "@/components/page/Header.astro";
---

<Header title="Technologies" subtitle="What I build with." />

<section class="mt-8 grid grid-cols-4 gap-4 sm:grid-cols-5 md:grid-cols-6 lg:grid-cols-8 md:gap-6">
  {technologies.map((tech) => (
    <BentoBox
      padding={false}
      hoverHighlight
      className="relative aspect-square overflow-hidden rounded-xl group"
    >
      {/* Image */}
      <img
        src={tech.image}
        alt={tech.name}
        loading="lazy"
        decoding="async"
        class="h-full w-full object-cover transition-transform duration-500 ease-in-out group-hover:scale-105"
      />

      {/* Label */}
      <div class="pointer-events-none absolute inset-x-0 bottom-0 p-3 hidden group-hover:block">
        <span class="inline-block rounded-md bg-black/50 px-2 py-1 text-xs font-medium text-white backdrop-blur">
          {tech.name}
        </span>
      </div>
    </BentoBox>
  ))}
</section>
