---
interface Props {
  className?: string;
  padding?: boolean;
  hoverHighlight?: boolean;
}

const { className = "", padding = true, hoverHighlight = false } = Astro.props;
---

<div class={`rounded-3xl shadow-sm ${padding ? "p-6" : ""} border bg-background ${hoverHighlight ? "transition-all duration-300 hover:ring-2 hover:ring-primary" : ""} ${className}`}>
  <slot />
</div>
